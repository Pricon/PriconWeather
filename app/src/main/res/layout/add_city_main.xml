<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/title_item">
        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加城市"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back_button" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_item"
        android:id="@+id/search_item">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/input_city_name"
            android:hint="请输入城市名"
            android:paddingLeft="20sp"
            />

        <Button
            android:layout_width="30sp"
            android:layout_height="30dp"
            android:id="@+id/search_button"
            android:background="@drawable/ic_search"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hot_text"
        android:text="热门城市："
        android:layout_below="@+id/search_item"
        android:paddingLeft="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/beijing"
        android:text="北京"
        android:textSize="18sp"
        android:background="@drawable/new_shape"
        android:textColor="#fff"
        android:layout_below="@+id/hot_text"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/shanghai"
        android:text="上海"
        android:textSize="18sp"
        android:background="@drawable/new_shape"
        android:textColor="#fff"
        android:layout_below="@+id/hot_text"
        android:layout_toRightOf="@+id/beijing"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/guangzhou"
        android:text="广州"
        android:textSize="18sp"
        android:background="@drawable/new_shape"
        android:textColor="#fff"
        android:layout_below="@+id/hot_text"
        android:layout_toRightOf="@+id/shanghai"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/shenzhen"
        android:text="深圳"
        android:textSize="18sp"
        android:background="@drawable/new_shape"
        android:textColor="#fff"
        android:layout_below="@+id/beijing"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/hangzhou"
        android:text="杭州"
        android:textSize="18sp"
        android:background="@drawable/new_shape"
        android:textColor="#fff"
        android:layout_below="@+id/shanghai"
        android:layout_toRightOf="@+id/shenzhen"
        android:layout_margin="10dp"/>

</RelativeLayout>